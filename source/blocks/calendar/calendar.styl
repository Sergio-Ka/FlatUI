.calendar
	float left
	min-width 279px

.calendar__datepicker
	padding-top 12px
	
.datepicker__digit
	font-family 'Lato', Sans-Serif
	width 186px
	height 104px
	background #E75735
	color #FFFFFF
	font-size 4.2rem
	font-weight normal
	padding 0.3rem 0 0 5.2rem
	border none
	border-top-right-radius 3px
	border-top-left-radius 3px

/*JQuery UI datepicker CSS start here*/
.ui-datepicker-header
	height 43px
	border-radius 0
	background #d54c2c
	color #FFFFFF
	text-align center

.ui-datepicker-prev
	float left
	margin 6px 0 0 14px
	font-size 1.2rem
	font-weight bold
	transform: scale(0.8, 1.3)

.ui-datepicker-next
	float right
	margin 6px 15px 0 0
	font-size 1.2rem
	font-weight bold
	transform: scale(0.8, 1.3)

.ui-datepicker-title
	padding-top 6px
	font-size 1.22rem
	font-weight normal

.ui-datepicker-calendar>thead

.ui-datepicker-calendar>thead>tr
	height 27px
	background #E75735
	color #FFFFFF
	font-size 0.5rem
	font-weight normal

.ui-datepicker-calendar>tbody>tr
	height 40px

.ui-datepicker-calendar>tbody>tr>td
	border 1px solid #FFFFFF
	text-align center

.ui-datepicker-calendar
	width 100%
	background #F2F2F2
	border-spacing 0

.ui-state-default
	color #868686
	text-decoration none

.ui-datepicker-buttonpane
	background #E5E5E5
	height 49px
	border-bottom-right-radius 3px
	border-bottom-left-radius 3px

.ui-datepicker-today
	background #E75735

.ui-state-active
	color #FFFFFF

.ui-state-highlight
	color #FFFFFF

.ui-datepicker-current
	border none
	background #E5E5E5
	font-size 0.8rem
	font-weight bold
	color #868686
	margin 15px 0 0 11px

.ui-datepicker-current-day
	background #E75735
/*JQuery UI datepicker CSS end here*/