.events
  display flex
  min-height 11.722rem
  border-radius 0.167rem
  color #FFFFFF
  background #4EB7A8

  &__image
    background-position -3.333rem -0.056rem
    background-repeat no-repeat
    width 37.306%
    border-top-left-radius 0.167rem
    border-bottom-left-radius 0.167rem

  &__content
    width 62.694%
    padding 0.889rem 0.944rem 0 0.944rem
    border-top-right-radius 0.167rem
    border-bottom-right-radius 0.167rem
    font-weight normal
    font-size 0.63rem
    letter-spacing 0.02rem
    line-height 0.75rem

  &__day
    display inline-block
    font-size 4rem
    font-weight normal
    line-height 3.5rem
    margin 0

  &__month
    display inline-block
    font-size 1.8rem
    font-weight normal
    letter-spacing -0.08rem
    margin-left 0.5rem

  &__title
    font-size 0.7rem
    font-weight bold
    letter-spacing 0.03rem
    text-transform uppercase
    margin 1.2rem 0 0 0.222rem

  &__text
    letter-spacing 0.025rem
    margin 0.222rem 0 0 0.278rem

  &__button
    height 1.5rem
    margin 0.95rem 0.8rem 0 0.8rem