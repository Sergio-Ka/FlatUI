.messaging
    position relative
    float right
    min-width 288px

.messaging__container
    padding-top 12px

.messaging__header-1
    background #4EB7A8
    color #FFFFFF
    min-height 65px
    font-size 1.8rem
    text-align center
    letter-spacing -0.1rem
    padding 17px 0 0 0
    border-top-left-radius 3px
    border-top-right-radius 3px

.messaging__photo
    position absolute
    top 129px
    left 32.6%
    width 86px
    min-height 86px
    border-radius 50%
    border 4px solid #E5E5E5
    background url(blocks/messaging/images/photo_SB.png) -5px -7px no-repeat

.messaging__header-2
    background #46AB9D
    min-height 34px

.messaging__body
    background #F2F2F2
    min-height 250px
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
    padding-top 62px

.messaging__icon
    position absolute
    width 25px
    height 22px
    background url(blocks/messaging/images/icon-3.png) 0 0 no-repeat

.messaging__icon_left
    left 9.5%
    top 197px

.messaging__icon_right
    background-position 97% 0
    left 81.7%
    top 196px

.messaging__massage:before
    content ''
    border 7px solid transparent
    border-bottom 6px solid #FFFFFF
    position absolute
    left 50%
    margin-left -12px
    top 224px

.messaging__massage
    background #FFFFFF
    color #868686
    width 199px
    height 50px
    border-radius 5px
    margin 0 auto
    padding 17px 25px 0 20px
    font-size 0.7rem
    letter-spacing 0.04rem

.messaging__massage-input
    display block
    width 200px
    height 66px
    border 4px solid #FFFFFF
    border-radius 5px
    margin 19px auto 0
    background #E5E5E5
    color #868686
    font-family 'Lato', Sans-Serif
    font-size 0.7rem
    letter-spacing 0.04rem
    padding 14px 20px 0 16px

.messaging__button
    display block
    font-family 'Lato', Sans-Serif
    width 244px
    height 35px
    margin 15px auto
