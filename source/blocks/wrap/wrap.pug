include ../standard-buttons/standard-buttons.pug
include ../arrow-buttons/arrow-buttons.pug
include ../percentage-pie-chart/percentage-pie-chart.pug
include ../video/video.pug
include ../sliders/sliders.pug
include ../stages/stages.pug

mixin wrap()
    .wrap
        +standard-buttons([{text:"button", color:"green", size:"small", effect:"ripple", activeStatus:"", theme:""},
                            {text:"button", color:"green", size:"", effect:"ripple", activeStatus:"", theme:""},
                            {text:"button", color:"red", size:"", effect:"ripple", activeStatus:"", theme:""},
                            {text:"button", color:"red", size:"small", effect:"ripple", activeStatus:"", theme:""},
                            {text:"button", color:"green", size:"small", effect:"", activeStatus:"", theme:""},
                            {text:"button", color:"green", size:"", effect:"", activeStatus:"", theme:""},
                            {text:"button", color:"red", size:"", effect:"", activeStatus:"", theme:""},
                            {text:"button", color:"red", size:"small", effect:"", activeStatus:"", theme:""},
                            {text:"button", color:"green", size:"small", effect:"", activeStatus:"inactive", theme:""},
                            {text:"button", color:"green", size:"", effect:"", activeStatus:"inactive", theme:""},
                            {text:"button", color:"red", size:"", effect:"", activeStatus:"inactive", theme:""},
                            {text:"button", color:"red", size:"small", effect:"", activeStatus:"inactive", theme:""}
                        ])
        +arrow-buttons([{direction:"left", arrowColor:"#4EB7A8", buttonColor:"white"},
                        {direction:"right", arrowColor:"#4EB7A8", buttonColor:"white"},
                        {direction:"left", arrowColor:"#FFFFFF", buttonColor:"gray"},
                        {direction:"right", arrowColor:"#FFFFFF", buttonColor:"gray"},
                        {direction:"left", arrowColor:"#FFFFFF", buttonColor:"green"},
                        {direction:"right", arrowColor:"#FFFFFF", buttonColor:"green"}
                    ])
        +percentage-pie-chart([{type:"percentage", percent:0},
                                {type:"percentage", percent:38},
                                {type:"percentage", percent:62},
                                {type:"percentage", percent:89},
                                {type:"pie-chart", percent:[{color:"#E5E5E5", percent:33},
                                                            {color:"#747474", percent:11},
                                                            {color:"#4EB7A8", percent:26},
                                                            {color:"#E75735", percent:30}]}
                            ])
        +sliders()
        +stages({markedStage:3, maxStage:5, colorOfMarkedStage:"#E75735", colorOfInactiveStage:"#E5E5E5", textColor:"#FFFFFF", inactiveTextColor:"#888888"})
        include ../form-elements/form-elements.pug
        .wrap__positioner-upper
            include ../search-drop-down/search-drop-down.pug
            include ../user-profile/user-profile.pug
        include ../news-events/news-events.pug
        include ../location/location.pug
        .wrap__positioner-lower
            include ../calendar/calendar.pug
            include ../messaging/messaging.pug
        +video({link:"https://player.vimeo.com/video/62980495?color=e75735&portrait=0"})

        script(src="./vendors/jquery-ui-1.12.1.custom/external/jquery/jquery.js")
        script(src="./vendors/jquery-ui-1.12.1.custom/jquery-ui.js")