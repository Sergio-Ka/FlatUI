    -let {image = "images/news-photo.png", header = "It's all going downhill", date = "24 august 2013", text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros."} = options;
