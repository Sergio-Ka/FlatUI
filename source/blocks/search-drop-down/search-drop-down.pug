include ../header-of-block/header-of-block.pug
include ../search-form/search-form.pug
include ../selectmenu/selectmenu.pug

mixin search-drop-down()
    section.search-drop-down
        +header-of-block("search / drop down")
        .search-drop-down__search-success
            +search-form({placeholder:"Search", errorStatus:false})
        .search-drop-down__search-unsuccess
            +search-form({placeholder:"I've not found what I'm looking for...", errorStatus:true})
        form.search-drop-down__selectmenu-form
            +selectmenu({selectedItem: 1, items:["Choose An Option","Option 1","Option 2","Option 3","Option 4"]})