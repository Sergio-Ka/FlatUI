.search-drop-down
  width 48.5%
  padding-bottom 10.25rem

  @media only screen and (max-width 37.556rem)
    width 100%
    box-sizing border-box
    padding 0.5rem

  &__search

    &-success
      margin 1.111rem 0 0.889rem
      width 100%

      @media only screen and (max-width 33.556rem)
        margin 0.556rem

    &-unsuccess
      margin 0 0 0.444rem
      width 100%

      @media only screen and (max-width 33.556rem)
        margin 0.556rem
  
  &__selectmenu-form
    width 100%

    @media only screen and (max-width 33.556rem)
      margin 0 0 0 0.556rem