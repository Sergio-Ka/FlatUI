.map
  display flex
  flex-direction column

  &__frame
    width 100%
    min-height 11.278rem
    border none

  &__legend
    display flex
    background #E75735
    color #FFFFFF
    width 100%
    min-height 3.833rem
    border-bottom-right-radius 0.167rem
    border-bottom-left-radius 0.167rem

  &__invite
    font-size 1.6rem
    flex-basis 27.5%
    padding 0.8rem 0.6rem 0 1.6rem
    box-sizing border-box

    @media only screen and (max-width 27rem)
      flex-basis 42%

  &__adress
    font-size 0.65rem
    font-weight bold
    letter-spacing 0.067rem
    text-transform uppercase
    flex-basis 56.5%
    padding 1rem 0 0 0
    box-sizing border-box

    @media only screen and (max-width 27rem)
      flex-basis 42%

  &__icons
    flex-basis 16%

  &__icon
    float right
    padding 1.222rem 1.444rem 0 0

    @media only screen and (max-width 27rem)
      padding 1.222rem 0.7rem 0 0     

    &:nth-child(2)
      padding 1.167rem 1.222rem 0 0

      @media only screen and (max-width 27rem)
        padding 1.167rem 0.5rem 0 0 