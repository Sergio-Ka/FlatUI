include ../header-of-block/header-of-block.pug
include ../news/news.pug
include ../events/events.pug

mixin news-events()
    section.news-events
        +header-of-block("news & events")
        .news-events__news
            +news({image:"images/news-photo.png", header: "It's all going downhill", date: "24 august 2013", text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros."})
        .news-events__events
            +events({image:"images/events-photo.png", day: "24", month: "Aug", title: "this is the title", text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.", button: {text:"add to calendar", color:"green", size:"", effect:"", activeStatus:"", theme:"events"}})