.news-events
    min-height 302px

.news-events__block
    min-width 288px
    min-height 212px
    border-radius 3px
    margin-top 21px
    color #FFFFFF
    
.news
    background url(blocks/news-events/images/news-photo.png) -53px 0 no-repeat
    float left

.events
    background url(blocks/news-events/images/events-photo.png) -60px -1px no-repeat
    float right

.news-events__content
    width 153px
    min-height 192px
    padding 20px 17px 0 23px
    float right
    border-top-right-radius 3px
    border-bottom-right-radius 3px

.news-events__content_color_red
    background #E75735

.news-events__content_color_green
    background #4EB7A8

.news-header
    font-weight normal
    font-size 1.53rem
    line-height 1.45rem
    margin 0

.news-date
    font-weight bold
    font-size 0.6rem
    margin 12px 0 11px
    letter-spacing 0.06rem

.news-content
    font-weight normal
    font-size 0.63rem
    margin 0
    letter-spacing 0.02rem
    line-height 0.75rem

.events-date-1
    float left
    font-size 4rem
    font-weight normal
    margin -4px 0 0 -5px
    line-height 3.5rem

.events-date-2
    float left
    font-size 1.8rem
    font-weight normal
    margin 25px 0 0 10px
    letter-spacing -0.08rem

.events-title
    font-size 0.7rem
    font-weight bold
    letter-spacing 0.03rem
    margin 79px 0 2px -3px

.events-content
    font-weight normal
    font-size 0.63rem
    margin 0
    letter-spacing 0.02rem
    line-height 0.75rem

.events-button
    display block
    background #FFFFFF
    color #4EB7A8
    font-family 'Lato', Sans-Serif
    font-size 0.6rem
    font-weight bold
    letter-spacing 0.03rem
    width 128px
    height 25px
    margin 19px 9px