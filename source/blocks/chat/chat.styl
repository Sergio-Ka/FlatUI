.chat

  &__name
    background #4EB7A8
    color #FFFFFF
    min-height 2.611rem
    font-size 1.8rem
    text-align center
    letter-spacing -0.1rem
    padding 0.944rem 1rem 1rem 1rem
    border-top-left-radius 0.167rem
    border-top-right-radius 0.167rem

  &__header-lower-block
    position relative
    background #46AB9D
    min-height 1.9rem

  &__photo
    position absolute
    top -0.7rem
    left calc(50% - 2.8rem)
    min-width 4.778rem
    min-height 4.778rem
    border-radius 50%
    border 0.222rem solid #E5E5E5
    background-position -0.278rem -0.389rem
    background-repeat no-repeat

  &__body
    background #F2F2F2
    border-bottom-left-radius 0.167rem
    border-bottom-right-radius 0.167rem
    padding 0 1.25rem 0.6rem 1.25rem

  &__icons
    min-height 1.2rem
    padding 1.15rem 0.25rem 1rem 0.25rem

  &__icon
    width 1.389rem
    min-height 1.2rem
    background url(images/icon-chat-sprite.png) 0 0 no-repeat

    &_left
      float left

    &_right
      float right
      background-position 97% 0

  &__message
    position relative
    background #FFFFFF
    color #868686
    min-height 2.96rem
    border-radius 0.278rem
    padding 0.944rem 1.389rem 0 1.111rem
    font-size 0.7rem
    letter-spacing 0.04rem

    &-tail
      position absolute
      content ''
      border 0.389rem solid transparent
      border-bottom 0.389rem solid #FFFFFF
      left calc(50% - 0.7rem)
      top -0.722rem

  &__input
    display block
    resize none
    width 100%
    min-height 4.9rem
    border 0.222rem solid #FFFFFF
    border-radius 0.278rem
    margin 0.95rem 0 0
    background #E5E5E5
    color #868686
    font-family 'Lato', Sans-Serif
    font-size 0.7rem
    letter-spacing 0.04rem
    padding 0.778rem 1.111rem 0 0.889rem
    box-sizing border-box

  &__button
    margin 0.833rem 0
    padding 0 0 0 0