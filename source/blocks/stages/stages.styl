.stages
    min-height 117px

.stage
    min-width 594px
    height 29px

.stages__graphics
    margin 13px 0 0 0

.stage__line
    stroke-width 5
    stroke #E5E5E5

.stage__line_color_red
    stroke #E75735

.stage__circle_color_red
    fill #E75735

.stage__circle_color_grey
    fill #E5E5E5

.stage__text
    font-size 0.8rem
    font-weight bold

.stage__text_color_white
    fill #FFFFFF

.stage__text_color_darkgrey
    fill #888888