.stage
  width 100%
  height 29px

.stage__line
  stroke-width 5
  stroke #E5E5E5

.stage__line_color_red
  stroke #E75735

.stage__circle_color_red
  fill #E75735

.stage__circle_color_grey
  fill #E5E5E5

.stage__text
  font-size 0.8rem
  font-weight bold

.stage__text_color_white
  fill #FFFFFF

.stage__text_color_darkgrey
  fill #888888

@media only screen and (max-width 604px)
  .stage__text
    font-size 0.5rem