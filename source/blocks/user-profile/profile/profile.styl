.profile__photo
  float left
  width 84px
  height 84px
  border-radius 50%
  border 4px solid #E5E5E5
  &_num-photo_1
    background url(blocks/user-profile/profile/images/photo-john-smith.png) -26px 0px no-repeat
  &_num-photo_2
    background url(blocks/messaging/chat/images/photo-sarah-brown.png) -8px -8px no-repeat
    
.profile__content
  float right
  width 163px
  height 93px
  border-radius 6px
  background #E5E5E5
  &_theme_green
    background #4EB7A8
  &:before
    content ''
    border 6px solid transparent
    border-right 6px solid #E5E5E5
    position absolute
    left 91px
    top 43%
  &_theme_green:before
    content ''
    border 6px solid transparent
    border-right 6px solid #4EB7A8
    position absolute
    left 91px
    top 43%
    
.profile__name
  display block
  font-size 1rem
  font-weight normal
  text-align center
  margin 9px 0 0 0
  &_theme_light
    color #E75735
  &_theme_green
    color #FFFFFF

.profile__post
  display block
  font-size 0.6rem
  letter-spacing 0.04rem
  text-align center
  margin 1px 0 0 0
  &_theme_light
    color #4F4F4F
  &_theme_green
    color #FFFFFF

.profile__icons
  padding 10px 0 0 5px
  text-align center

.profile__social-icon-middle
  margin 0 17px 0 23px