.user-profile
    position relative
    float right
    width 268px

.user-profile__photo
    float left
    width 83px
    height 84px

.photo-block
    border-radius 50%
    border 4px solid #E5E5E5

.photo-1
    background url(blocks/user-profile/images/photo_JS.png) -26px 0px no-repeat
    margin 17px 12px 0 0

.photo-2
    background url(blocks/messaging/images/photo_SB.png) -8px -8px no-repeat
    margin 27px 12px 0 0
    height 84px
    
.user-profile__block
    float left
    width 163px
    height 93px
    border-radius 6px

.block-1
    background #E5E5E5
    margin 17px 0 0 0

.block-2
    background #4EB7A8
    margin 28px 0 0 0
    
.block-1:before
    content ''
    border 6px solid transparent
    border-right 6px solid #E5E5E5
    position absolute
    left 91px
    top 104px

.block-2:before
    content ''
    border 6px solid transparent
    border-right 6px solid #4EB7A8
    position absolute
    left 91px
    top 224px
    
.user-profile__name
    display block
    font-size 1rem
    font-weight normal
    text-align center
    margin 9px 0 0 0

.user-profile__post
    display block
    font-size 0.6rem
    letter-spacing 0.04rem
    text-align center
    margin 1px 0 0 0

.user-profile__name_theme_light
    color #E75735

.user-profile__post_theme_light
    color #4F4F4F

.user-profile__name_theme_green
    color #FFFFFF

.user-profile__post_theme_green
    color #FFFFFF

.user-profile__icons
    padding 10px 0 0 5px
    text-align center

.user-profile__social-icon
    margin 0 17px 0 23px