    div(class="user-profile__block-2")
        div(class="profile")
            div(class="profile__photo profile__photo_num-photo_2")
            div(class="profile__content profile__content_theme_green")
                h1(class="profile__name profile__name_theme_green") Sarah Brown
                h2(class="profile__post profile__post_theme_green") DEVELOPER
                div(class="profile__icons")
                    img(src="public/images/FB_white.png")
