.std-buttons
  min-height 275px
  margin-top 81px

.std-buttons__row
  margin-left 52px

.std-buttons__row_first
  margin-top 62px

.std-button
  border none
  cursor pointer
  color #FFFFFF
  border-radius 4px
  width 118px
  height 32px
  font-weight bold

.std-buttons__std-button
  margin 10px 12px
  display inline
  vertical-align bottom

.std-button_inactive-green
  color #4EB7A8
  background #FFFFFF
  border 1px solid #4EB7A8
  border-bottom 4px solid #4EB7A8

.std-button_inactive-red
  color #E75735
  background #FFFFFF
  border 1px solid #E75735
  border-bottom 4px solid #E75735

.std-button_color_green
  background #4EB7A8
  border-bottom 4px solid #28A290

.std-button_color_red
  background #E75735
  border-bottom 4px solid #BF3F1F

.std-button_size_small
  width 78px
  height 22px
  font-size 0.5rem
  font-weight bold

.std-button_ripple-eff
  position relative
  overflow hidden
  border none

.std-button_ripple-eff:after
  content ''
  position absolute
  top 50%
  left 50%
  width 5px
  height 5px
  background rgba(255, 255, 255, .5)
  opacity 0
  border-radius 100%
  transform scale(1, 1) translate(-50%)
  transform-origin 50% 50%

@keyframes ripple
  0%
    transform scale(0, 0)
    opacity 1
  20%
    transform scale(25, 25)
    opacity 1

  100% 
    opacity 0
    transform scale(40, 40)

.std-button_ripple-eff:focus:not(:active)::after
  animation ripple 1s ease-out