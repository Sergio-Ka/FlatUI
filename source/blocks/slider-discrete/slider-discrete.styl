.slider-discrete
  &__scale
    min-width 14.444rem
    padding-top 0.167rem

  &__digit

    &-zero
      display inline-block
      font-size 0.6rem
      font-weight bold
      color #9D9D9D
      width 23%

    &-quarter
    &-half
    &-three-quarter
      display inline-block
      font-size 0.6rem
      font-weight bold
      color #9D9D9D
      width 24%

    &-full
      display inline-block
      font-size 0.6rem
      font-weight bold
      color #9D9D9D
      width 4%