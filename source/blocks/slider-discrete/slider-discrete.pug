mixin slider-discrete(options = {min: 0, max: 100, step: 25, value: 75, range: "min", theme: "green"})
    -let {min = 0, max = 100, step = 25, value = 75, range = "min", theme = "green"} = options;
    .slider-discrete.js-slider-discrete(data-min= min, data-max= max, data-step= step, data-value= value, data-range= range, data-theme= theme)
    .slider-discrete__scale
        -for (let i = min; i <= max; i += step) {
            .slider-discrete__digit= i
        -}