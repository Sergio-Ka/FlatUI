.arr-buttons
    min-height 140px

.arr-buttons__positioner
    margin-left 74px

.arr-button
    width 50px
    height 50px
    border-radius 50%
    font-size 23px
    font-weight bold
    border none

.arr-buttons__arr-button
    margin 23px 12px 12px 12px

.arr-button__arrow
    width 27px
    height 37px

.arr-button_color_green
    background #4EB7A8
    color #FFFFFF

.arr-button_color_gray
    background #E5E5E5
    color #FFFFFF

.arr-button_color_white
    background #FFFFFF
    color #4EB7A8
    border 3px solid #4EB7A8