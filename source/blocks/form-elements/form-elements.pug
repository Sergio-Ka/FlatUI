include ../header-of-block/header-of-block.pug

section.form-elements
    +header-of-block("form elements")
    .form-elements__left-block
        form.simple-form
            .simple-form__message.simple-form__message_color_red error
                .simple-form__message-tail.simple-form__message-tail_color_red
            input.simple-form__input-text(type="text", name="your-name", value="Your Name")/
            .simple-form__message.simple-form__message_color_green thanks!
                .simple-form__message-tail.simple-form__message-tail_color_green
            input.simple-form__input-text(type="text", name="your-email", value="Your Email")/
            textarea.simple-form__input-textarea Your Message
            .simple-form__button
                input.standard-button.standard-button_color_green(type="submit", value="SUBMIT")/
    .form-elements__right-block
        +header-of-block("toggles")
        form.form-elements__positioner-upper
            .form-elements__switch
                label.switch
                    input.switch__input(type="checkbox")/
                    span.switch__text(data-yes="ON", data-no="OFF")
                    span.switch__slider
            .form-elements__switch
                label.switch
                    input.switch__input(type="checkbox", checked)/
                    span.switch__text(data-yes="ON", data-no="OFF")
                    span.switch__slider
        +header-of-block("tick boxes")
        form.form-elements__positioner-lower
            .form-elements__tick-box
                input.tick-box-input(type="checkbox", id="c1", checked)/
                label(for="c1")
                    span.tick-box-circle-arrow
            .form-elements__tick-box
                input.tick-box-input(type="checkbox", id="c2")/
                label(for="c2")
                    span.tick-box-circle-arrow