.form-elements
    position relative
    min-height 336px

.form-elements__left-block
    float left
    width 50%

.form-elements__right-block
    float right
    width 50%

.form-elements__spacer
    width 100%
    height 37px

.form-elements__input-text
    float left
    width 193px
    height 26px
    margin 0 0 12px 0

.form-elements__input-textarea
    width 273px
    height 78px
    margin 0 0 0 0
    padding-top 10px
    
.input-text
    background #E5E5E5
    color #888888
    border none
    border-radius 3px
    font-family 'Lato', Sans Serif
    font-size 0.77rem
    font-weight normal
    padding-left 13px

.form-elements__button
    font-family 'Lato', Sans Serif
    width 118px
    height 35px
    margin 10px 0 0 170px

.form-elements__message
    float left
    width 72px
    height 23px
    margin 0 0 0 8px

.message
    border-radius 3px
    color #FFFFFF
    font-weight bold
    font-size 0.5rem
    line-height 1.0rem
    text-align center
    letter-spacing 0.06rem
    padding-top 5px

.message_color_red:before
    content ''
    border 4px solid transparent
    border-right 4px solid #E75735
    position absolute
    left 207px
    top 81px

.message_color_green:before
    content ''
    border 4px solid transparent
    border-right 4px solid #4EB7A8
    position absolute
    left 207px
    top 121px

.message_color_red
    background #E75735

.message_color_green
    background #4EB7A8