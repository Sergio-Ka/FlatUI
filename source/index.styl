h1
	font-size 1rem
	text-align center

.main
	font-size 18px
	&__page
		width 100%
		max-width 594px
		min-height 3176px
		margin 0 auto
		border 1px solid black

.page
	font-family 'Conv_Lato-Black', Sans-Serif
	background #ffffff
	color #4F4F4F

@media only screen and (max-width 375px)
	.main
		font-size 10px
	.line
		display none

@media only screen and (max-width 840px)
	.column-1
		float left
		width 88.90625%
		margin 7.109375% 6.171875% 0 4.921875%
	.column-2
		float left
		width 88.90625%
		margin 0 6.171875% 0 4.921875%
	.about
		padding 0

@media only screen and (max-width 1050px)
	.container-1
		width 100%
	.container-2
		float left
		width 100%